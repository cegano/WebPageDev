/* CSS Reset */
body, main, footer, table {
    margin: 0;
    padding: 0;
    border: 0;
}

/* Style rule for body elements */
body, tbody {
	background-color: #ffe5dc;
	font-family: sans-serif;
}

/* Style rules for table */
table {
	width: 80%;
	margin: 0 auto;
	border: 9px solid #fd4d0c;
	box-shadow: 10px 10px 8px #792101;
	border-collapse: collapse;
}

/* Style rule for table and all table cells */
table, tr, th, td {
	padding: 2%;
}

/* Style rules for background color for thead and th */
thead, th {
	background-color: #92341f;
	color: #fff;
	text-align: center;
}

/* Style rules for caption */
 caption {
	 font-size: 2.5em;
	 padding: 2%;
	 margin-top: 2%;
	 font-weight: bold;
	 color: #92341f;
 }

/* Style rule for table data cells */
td, th {
	border: 2px solid #f08080;
}

td {
	text-align: left;
}

/* Style rule for background color for every other table row */
tr:nth-child(odd) {
	background-color: #fe9772;
}

/* Style for the footer element */
footer {
	font-size: .70em;
	text-align: center;
}