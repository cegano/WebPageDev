/* CSS Reset */
body, header, main, nav, footer, img, ul {
	margin: 0;
	padding: 0;
	border: 0;
}

/* Style rules for body and images */
body {
	background-color: #ebf7e3;
	font-family: 'Roboto';
	font-family: 'Emblema';
	color: #000;
}

img {
	max-width: 100%;
	display: block;
	padding: 1.5em
}

/* Style rules for table */
table {
	width: 80%;
	margin: 0 auto;
	border: 3px solid #000;
}

/* Style rule for table and all table cells */
table, tr, th, td {
	border-collapse: collapse;
	padding: 2%;
}

/* Style rules for caption */
 caption {
	 font-size: 2em;
	 padding: 2%;
	 margin-top: 2%;
 }

/* Style rule for border for all table cells */
th, td {
	border: 1px solid #000;
}

/* Style rule for text centering for table data cells */
td {
	text-align: center;
}

/* Style rule for background color for every other table row */
tr:nth-child(odd) {
	background-color: #f6eee4;
}

/* Style rules for mobile viewport */

/* Style rule for mobile class */
.mobile {
    display: block;
}

/* Style rules for header area */
header {
	text-align: center;
	font-size: 1.25em;
	padding: 1em;
}

/* Style rules for navigation area */
nav {
    background-color: #2e8b57;
    border-bottom: 0.5px solid #375f1b;
}

nav ul {
    list-style-type: none;
    text-align: center;
}

nav li {
    display: block;
    font-size: 1.5em;
    font-family: Geneva, Arial, sans-serif;
    font-weight: bold;
    border-top: 0.5px solid #f6eee4;
}

nav li a {
    display: block;
    color: #f6eee4;
    padding: 0.5em 2em;
    text-decoration: none;
}

/* Style rules for main content */
main {
    padding: 3%;
    font-family: 'Roboto', sans-serif;
}

main p {
    font-size: 1.5em;
}

main p a {
	text-decoration: none;
}

main ul {
    list-style-type: square;
	font-size: 1.5em;
	margin-left: 15%;
}

.image1 {
	float: left;
	width: 325px;
	height: 243px;
	padding: 2em;
}

.image2 {
	height: 180px;
	width: auto;
}

.image3 {
	float: left;
	height: 180px;
}

.center {
	display: block;
	margin-left: auto;
	margin-right: auto;
	width: 40%;
}

.center1 {
	display: block;
	margin-left: auto;
	margin-right: auto;
	width: 25%;
}

a {
	text-decoration: none;
	display: inline;
	text-align: center;
}

h3 {
	text-align: center;
	font-size: 1.5em;
}

#bath, #haircut, #full-service {
    width: 29%;
    float: left;
    margin: 0 2%;
}

#info {
	clear: left;
    padding: 1% 2%;
	background: linear-gradient(#f6eee4, #2e8b57);
}

#contact {
    text-align: center;
	background: linear-gradient(#f6eee4, #2e8b57);
	padding: 1% 2%;
}

.map {
    border: 5px solid #000;
}

/* Style rules for form elements */
fieldset, input, textarea {
	margin: 2%;
}

legend {
	font-weight: bold;
	font-size: 1.25em;
}

label {
	display: block;
	padding-top: 2%;
}

#submit, #reset {
	margin: 0 auto;
	display: inline-block;
	padding: 2%;
	background-color: #000;
	color: #f6eee4;
	font-size: 1.25em;
	border-radius: 10px;
}

/* Style rules for footer content */
footer {
    text-align: center;
    font-size: 0.85em;
    background-color: #2e8b57;
    color: #f6eee4;
    clear: left;
}

footer a {
    color: #f6eee4;
    text-decoration: none;
}

/* Media Query for Tablet Viewport */
@media screen and (min-width: 620px), print {

/* Tablet Viewport: Style rules for nav area */
	nav li {
		border-top: none;
		display: block;
		font-size: 1.25em;
		border-top: 1px solid #f6eee4;
	}

	nav li a {
		padding: 0.5em;
	}

/* Tablet Viewport: Style rules for main content */
	.image1 {
		text-align: center;
	}
	
	.image2 {
		height: 110px;
		width: auto;
	}
	
	.image3 {
		margin-bottom: 10px;
	}
	
	img {
		position: relative;
		right: 20px;
	}

/* Tablet Viewport: Style rule for map */
	.map {
		width: 440px;
		height: 425px;
	}
}


/* Media Query for Large Desktop Viewports */
@media screen and (min-width: 1921px) {
	main {
		background-color: #f6eee4;
	}
	
	.image2 {
		height: 180px;
		width: auto;
	}
}

/* Media Query for Print */
@media print {
	body {
		background-color: #fff;
		color: #000;
	}
}

/* Media Query for Desktop Viewport */
@media screen and (min-width: 1000px), print {

/* Desktop Viewport: Style rules for nav area */
	nav li {
		font-size: 1.5em;
		display: inline-block;
		border: none;
	}

	nav li a {
		padding: 0.5em 1.5em;
	}

	nav li a:hover {
		color: #000;
		background-color: #f6eee4;
	}
	
/* Desktop Viewport: Style rules for form elements */
	.form {
		width: auto;
	}
	
	.form-grid {
		display: grid;
		grid-template-columns: auto auto;
		grid-column-gap: 20px;
	}
}

/*Desktop Viewport: Style rules for main content */
	.image2 {
		height: 180px;
		width: auto;
	}
}

